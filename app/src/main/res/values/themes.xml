<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.VetSystem" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="nunitoTextViewStyle." parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/nunito_regular</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="textviewWhite" parent="android:Widget.TextView">
        <item name="android:textColor">#FFF</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="textviewTitle" parent="android:Widget.TextView">
        <item name="android:textColor">#FFF</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/_24sdp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="textviewButton" parent="android:Widget.TextView">
        <item name="android:textColor">#FF4A4A47</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:background">@drawable/constraint_bg_button</item>
    </style>
    <style name="back" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#FFF</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="noActionBar" parent="android:Theme.Holo.NoActionBar">
        <item name="android:windowBackground">@android:color/black</item>
    </style>
    <style name="Spinner" parent="Widget.AppCompat.Light.DropDownItem.Spinner">
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textSize">@dimen/_15sdp</item>

    </style>
    <style name="NavigationTheme" parent="Theme.VetSystem">
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>